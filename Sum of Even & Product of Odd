#include <iostream>
#include <vector>

int main(){
  
/* The following lines  will create variables and a vector and will initalize the values for each. */
int sum_even=0;
int product_odd=1;
std::vector<int> numbers={2,4,3,6,1,9,};
  
  
/*The following lines will create a loop to find out if the number in the index position of the vector is even or not. Based on that will either add it the sum_even variables or multiply it by the product_odd variable*/ 
for(int i=0;i<numbers.size();i++){
  if(numbers[i]%2==0){
    sum_even=sum_even+numbers[i];
  }
  else{
    product_odd=product_odd*numbers[i];
  } 
}
  
/*The following lines will output the results found in the previous section of the code*/  
  std::cout<<"Sum of even numbers is "<<sum_even<<"\n";
  std::cout<<"Product of odd numbers is "<<product_odd<<"\n";
  
return 0;
}
